<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://github.com/Gethe/wow-ui-source/blob/live/FrameXML/UI.xsd">
    <!--FONTS -->
    <Font name="ViragDevToolDefaultFont" inherits="SystemFont_Small" justifyH="LEFT" />
    <Font name="ViragDevToolMediumFont" inherits="SystemFont_Med1" justifyH="LEFT" virtual="true"/>

    <Texture name="ViragDevToolStrokeTexture" virtual="true">
        <Color r="0.1" g="0.1" b="0.1" a="1"/>
    </Texture>

    <!--*********************************************************************************************************
                                                      TEMPLATES
     *********************************************************************************************************-->

    <!--FRAME -->
    <Frame name="ViragDevToolFrameTemplate" virtual="true">
        <Layers>
            <Layer>
                <Texture>
                    <Size y="35"/>
                    <Size y="35"/>
                    <Anchors>
                        <Anchor point="TOPRIGHT"/>
                        <Anchor point="LEFT"/>
                    </Anchors>
                    <Color r="0.2" g="0.2" b="0.2" a="0.9"/>
                </Texture>
                <Texture>
                    <Size y="35"/>
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT"/>
                        <Anchor point="LEFT"/>
                    </Anchors>
                    <Color r="0.2" g="0.2" b="0.2" a="0.9"/>
                </Texture>
                <Texture>
                    <Size x="5"/>
                    <Anchors>
                        <Anchor point="TOPRIGHT" y="-35"/>
                        <Anchor point="BOTTOM" y="35"/>
                    </Anchors>
                    <Color r="0.2" g="0.2" b="0.2" a="0.9"/>
                </Texture>
                <Texture>
                    <Size x="5"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" y="-35"/>
                        <Anchor point="BOTTOM" y="35"/>
                    </Anchors>
                    <Color r="0.2" g="0.2" b="0.2" a="0.9"/>
                </Texture>
            </Layer>
            <Layer level="BACKGROUND">
